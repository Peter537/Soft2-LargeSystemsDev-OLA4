<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<variable name="logDir" value="logs" />

	<targets>
		<!-- System: console + rolling file (compressed archives) -->
		<target xsi:type="Console" name="console"
				layout="${date:format=HH\\:mm\\:ss} ${level:uppercase=true} ${logger} - ${message} ${exception}" />

		<target xsi:type="File" name="systemFile"
				fileName="${logDir}/system-${shortdate}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="14"
				enableArchiveFileCompression="true"
				layout="${longdate} ${uppercase:${level}} (${event-properties:correlation_id}) ${message} ${exception}" />

		<!-- Audit: rolling JSON file (compressed archives) -->
		<target xsi:type="File" name="auditFile"
				fileName="${logDir}/audit-${shortdate}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="90"
				enableArchiveFileCompression="true">
			<layout xsi:type="JsonLayout" includeAllProperties="true">
				<attribute name="timestamp" layout="${longdate}" />
				<attribute name="level"     layout="${level}" />
				<attribute name="message"   layout="${message}" />
				<attribute name="logger"    layout="${logger}" />
				<attribute name="log_type"  layout="audit" />
				<attribute name="service"   layout="city-bikes" />
			</layout>
		</target>
	</targets>

	<rules>
		<!-- Regular logs -->
		<logger name="*" minlevel="Info" writeTo="console,systemFile" />

		<!-- Dedicated AUDIT logger -->
		<logger name="AUDIT" minlevel="Info" writeTo="auditFile" final="true" />
	</rules>
</nlog>
